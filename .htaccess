# Laravel .htaccess Ultra-Fix (public_html)

# âœ… PHP Handler (versi EA-PHP 8.2)
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82 .php .php8 .phtml
</IfModule>

# âœ… Rewrite Rules
<IfModule mod_rewrite.c>
    RewriteEngine On

    # ğŸ”¥ FIX LiteSpeed shared hosting (NO FollowSymLinks)
    Options -Indexes +SymLinksIfOwnerMatch

    # ğŸš€ Map /assets/* ke public/assets/*
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
    RewriteRule ^assets/(.*)$ public/assets/$1 [L]

    # ğŸš€ Map /storage/* ke public/storage/* (ONLY if copy manual, not symlink)
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
    RewriteRule ^storage/(.*)$ public/storage/$1 [L]

    # ğŸ›¡ï¸ Block akses folder Laravel inti
    RewriteRule ^(app|bootstrap|config|database|pralon-compro|resources|routes|storage|tests|vendor)/ - [F,L]

    # ğŸ›¡ï¸ Block akses file sensitif
    <FilesMatch "^(\.env|\.git|\.htaccess|composer\.(json|lock)|package\.json|phpunit\.xml|readme\.md|artisan|server\.php)$">
        Require all denied
    </FilesMatch>

    # ğŸš€ Route semua request ke public/index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ public/index.php [L]

    # ğŸ”’ Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# âœ… Set Laravel public/index.php as default
DirectoryIndex public/index.php

